---
import type { HTMLAttributes } from "astro/types";

interface Props<Tag extends keyof astroHTML.JSX.DefinedIntrinsicElements>
  extends HTMLAttributes<Tag> {
  as?: Tag;
}

let { class: className, as, ...props } = Astro.props;
as ??= "div";

const Tag = as;
---

<Tag class:list={[className, "mx-auto max-w-3xl"]} {...props}>
  <slot />
</Tag>
