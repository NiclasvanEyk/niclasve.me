---
import { SITE_TITLE } from "../consts";

interface Props {
  page?: {
    href: string;
    text: string;
  };
}

const { page } = Astro.props;
---

<header class="flex flex-row place-content-center">
  <nav class="flex w-full max-w-3xl items-center">
    <a
      href="/"
      class="py-3 pl-3 tracking-tight text-zinc-900/80 dark:text-zinc-100/40"
    >
      {SITE_TITLE}
    </a>

    {
      typeof page !== "object" ? null : (
        <>
          <span class="divider mx-1">/</span>
          <a href={page.href} class="sub-site">
            {page.text}
          </a>
        </>
      )
    }
  </nav>
</header>
