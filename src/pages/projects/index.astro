---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SiteContainer from '@/components/SiteContainer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort(
	(a, b) => a.data.startedAt.getTime() - b.data.startedAt.getTime()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header page={{ href: "/projects", text: "Projects" }} />
		<main>
      <SiteContainer>
        <ol>
          { projects.map(project => <li>{ project.data.title }</li>) }
        </ol>
      </SiteContainer>
		</main>
		<Footer />
	</body>
</html>
